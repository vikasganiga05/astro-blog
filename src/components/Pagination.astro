---
import Link from "./Link.astro";

const { previousUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
  {
    previousUrl && (
      <Link
        text="Previous"
        href={previousUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-left-line",
          side: "left",
        }}
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="Next"
        href={nextUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-right-line",
          side: "right",
        }}
      />
    )
  }
</nav>
